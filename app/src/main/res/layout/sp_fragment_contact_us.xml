<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F2F7F7"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="16dp"
        android:padding="8dp"
        card_view:cardCornerRadius="24dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/joshi_image" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5FAFA"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/contact_sp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:padding="10dp"
            android:text="Name : Joshi Jignesh A."
            android:textColor="#131212"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/contact_sp_enr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:padding="10dp"
            android:text="En No.: 150650107010"
            android:textColor="#131212"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/contact_sp_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:padding="10dp"
            android:text="Email : Joshijignesh50@gmail.com"
            android:textColor="#131212"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/contact_sp_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:padding="10dp"
            android:text="Contact : 9909366341"
            android:textColor="#131212"
            android:textSize="20dp" />


    </LinearLayout>
</LinearLayout>