<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:outlineSpotShadowColor="@android:color/darker_gray"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/history_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/history_card_view_image"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:src="@drawable/user_icon_small" />

            <TextView
                android:id="@+id/history_card_view_textView_providername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/history_card_view_image"
                android:text="Gami Mehul R."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/history_card_view_textView_serviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_card_view_textView_providername"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/history_card_view_image"
                android:text="Plumber"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/history_card_view_textView_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_card_view_textView_serviceName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/history_card_view_image"
                android:background="@color/successLight"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="4.8"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_card_view_textView_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_card_view_textView_rating"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/history_card_view_image"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Pending"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/warning"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>